<Window x:Class="ManagementCompany_Salchuk_Matyukhina_322.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementCompany_Salchuk_Matyukhina_322"
        mc:Ignorable="d"
        Title="Управляющая компания" Height="450" Width="800" Style="{StaticResource PageBack}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BackButton" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Click="BackButton_Click" Grid.Row="0" Style="{StaticResource ButtonStyle}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Button x:Name="AdminButton" Content="Администратор" HorizontalAlignment="Center" VerticalAlignment="Center" Click="AdminButton_Click" Grid.Row="0" Style="{StaticResource ButtonStyle}" Width="105"/>
            <Button x:Name="DirectorButton" Content="Руководитель" HorizontalAlignment="Center" VerticalAlignment="Center" Click="DirectorButton_Click" Grid.Row="0" Style="{StaticResource ButtonStyle}" Width="105"/>
        </StackPanel>
        <Image Source="/logo.png" Grid.Row="0" x:Name="LogoImage" Style="{StaticResource ImageStyle}"/>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Style="{StaticResource FrameBack}"/>
    </Grid>
</Window>
