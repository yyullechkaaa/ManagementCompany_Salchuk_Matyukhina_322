<Page x:Class="ManagementCompany_Salchuk_Matyukhina_322.Pages.AddEditDebtPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementCompany_Salchuk_Matyukhina_322.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Добавление/редактирование задолжностей по оплате" 
       Style="{StaticResource ResourceKey=HeaderStyle}" 
       HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                <TextBlock Text="Адрес" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Adress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="addresstextbox" Width="350"
                     ToolTip="Введите адрес" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3">
                <TextBlock Text="Номер квартиры" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Apartment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="aparttextbox" Width="350"
                 ToolTip="Введите номер квартиры" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Margin="0,10">
                <TextBlock Text="Владелец" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <ComboBox Width="350" SelectedItem="{Binding Owner1, Mode=TwoWay}" 
              x:Name="comboboxowner" Height="30" DisplayMemberPath="Name" SelectedValuePath="Owner_id"
              ToolTip="Выберите владельца из списка"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5">
                <TextBlock Text="Номер телефона" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
     Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="phonetextbox" Width="350"
     ToolTip="Введите номер телефона" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6">
                <TextBlock Text="Счет на воду" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Water, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="watertextbox" Width="350"
            ToolTip="Введите счет на воду" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="7">
            <TextBlock Text="Счет на воду" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
            <TextBox Text="{Binding Electricity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
            Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="electrotextbox" Width="350"
            ToolTip="Введите счет на электроэнергию" Margin="0,10"/>
            </StackPanel>

            <Button Content="Сохранить" x:Name="savebutton" Click="savebutton_Click" Height="30" 
            Style="{StaticResource ResourceKey=ButtonStyle}" Grid.Row="8" 
            VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="0,20"
            ToolTip="Сохранить объявление"/>

            <Button Grid.Row="9" x:Name="ButtonClean" Content="Очистить" Width="350" Height="30" 
            Click="ButtonClean_Click" Style="{StaticResource ResourceKey=ButtonStyle}" 
            HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"
            ToolTip="Очистить все поля формы"/>
        </Grid>
    </ScrollViewer>
</Page>
