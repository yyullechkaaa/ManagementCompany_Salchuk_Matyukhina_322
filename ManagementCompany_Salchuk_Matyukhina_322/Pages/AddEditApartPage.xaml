<Page x:Class="ManagementCompany_Salchuk_Matyukhina_322.Pages.AddEditApartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementCompany_Salchuk_Matyukhina_322.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Добавление/редактирование квартир" 
               Style="{StaticResource ResourceKey=HeaderStyle}" 
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                <TextBlock Text="Номер квартиры" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                 Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="numbertextbox" Width="350"
                 ToolTip="Введите номер квартиры" Margin="0,10"/>
            </StackPanel>

            <Button Content="Сохранить" x:Name="savebutton" Click="savebutton_Click" Height="30" 
        Style="{StaticResource ResourceKey=ButtonStyle}" Grid.Row="2" 
        VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="0,20"
        ToolTip="Сохранить объявление"/>

            <Button Grid.Row="3" x:Name="ButtonClean" Content="Очистить" Width="350" Height="30" 
        Click="ButtonClean_Click" Style="{StaticResource ResourceKey=ButtonStyle}" 
        HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"
        ToolTip="Очистить все поля формы"/>
        </Grid>
    </ScrollViewer>
</Page>
