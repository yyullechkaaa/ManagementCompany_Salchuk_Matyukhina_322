<Page x:Class="ManagementCompany_Salchuk_Matyukhina_322.Pages.AddEditSpisokPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManagementCompany_Salchuk_Matyukhina_322.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление/редактирование">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Добавление/редактирование списка жилого фонда" 
           Style="{StaticResource ResourceKey=HeaderStyle}" 
           HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                <TextBlock Text="Адрес" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Adress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="addresstextbox" Width="350"
                         ToolTip="Введите адрес" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2">
                <TextBlock Text="Дата начала управления" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}" 
                    x:Name="datepicker" Width="350"
                    ToolTip="Выберите дату начала управления" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3">
                <TextBlock Text="Этажей" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Floors, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
             Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="floorstextbox" Width="350"
             ToolTip="Введите количество этажей" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4">
                    <TextBlock Text="Квартир" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Apartament, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="aparttextbox" Width="350"
                     ToolTip="Введите количество квартир" Margin="0,10"/>        
                </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5">
                <TextBlock Text="Год" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
         Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="yeartextbox" Width="350"
         ToolTip="Введите год" Margin="0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6">
                <TextBlock Text="Площадь" Style="{StaticResource ResourceKey=TextStyle}" Width="200"/>
                <TextBox Text="{Binding Square, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                Style="{StaticResource ResourceKey=TextBoxStyle}" x:Name="squaretextbox" Width="350"
                ToolTip="Введите площадь" Margin="0,10"/>
            </StackPanel>

                    <Button Content="Сохранить" x:Name="savebutton" Click="savebutton_Click" Height="30" 
                Style="{StaticResource ResourceKey=ButtonStyle}" Grid.Row="7" 
                VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Margin="0,20"
                ToolTip="Сохранить объявление"/>

                    <Button Grid.Row="8" x:Name="ButtonClean" Content="Очистить" Width="350" Height="30" 
                Click="ButtonClean_Click" Style="{StaticResource ResourceKey=ButtonStyle}" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10"
                ToolTip="Очистить все поля формы"/>
        </Grid>
    </ScrollViewer>
</Page>
